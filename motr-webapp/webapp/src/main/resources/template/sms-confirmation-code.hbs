{{#partial "content" }}

    <div class="grid-row">

        <div class="column-two-thirds">

            {{#message}}
                {{> partial/error-message }}
            {{/message}}

            {{#showSystemError}}
                {{> partial/system-error }}
            {{/showSystemError}}

            <h1 class="heading heading-large heading--large">One more step</h1>

            <p>We sent you a text message with a 5-digit activation code, which expires in 24h. Enter the code on this page to activate your reminder.</p>

            <form method="POST" autocomplete="off" novalidate="" action="confirm-phone">

                <div class="form-group {{#showInLine}}{{#message}}form-group-error{{/message}}{{/showInLine}}" id="confirm-code-input">
                    <label for="confirmationCode" class="form-label">
                        Your activation code
                        {{#showInLine}}
                            {{#messageAtField}}<span class="error-message">{{ messageAtField }}</span>{{/messageAtField}}
                        {{/showInLine}}
                    </label>

                    <input type="text" id="confirmationCode" name="confirmationCode" class="form-control" maxlength="5" value="{{confirmationCode}}">
                </div>

                <div class="form-group">
                    <details role="group">
                        <summary role="button" aria-controls="details-content-0" aria-expanded="false"><span class="summary">Text didn’t arrive?</span></summary>
                        <p id="details-content-0" aria-hidden="true">
                            We sent you a text message to {{viewModel.phoneNumber}}. It can take a couple of minutes for the text to arrive. <a href="{{url this resendUrl}}">Resend the text</a>.
                        </p>
                    </details>
                </div>

                <div class="form-group">
                    <input type="submit" value="{{continue_button_text}}" class="button" id="continue">
                </div>

            </form>

        </div>

    </div>

{{/partial}}
{{> master pageTitle="One more step – MOT reminders"}}
